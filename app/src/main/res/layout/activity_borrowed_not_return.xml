<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/array_not_return_image"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:padding="2dip" />

    <TextView
        android:id="@+id/array_not_return_book_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/array_not_return_image"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/array_not_return_shop_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/array_not_return_book_name"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/array_not_return_shop_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/array_not_return_shop_name"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="20dip" />

    <TextView
        android:id="@+id/array_not_return_borrowed_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/array_not_return_book_name"
        android:layout_toRightOf="@+id/array_not_return_image"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textSize="15dip" />
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>