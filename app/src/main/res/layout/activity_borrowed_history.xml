<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andriod="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:orientation="vertical">
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
            <TextView
                android:id="@+id/array_history_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textSize="15dip" />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id ="@+id/layout1"
                android:layout_below="@+id/array_history_book_name"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/array_history_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="10dip"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/array_history_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@+id/array_history_shop_name"
                    android:textSize="10dip" />

                <TextView
                    android:id="@+id/array_history_borrowed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:paddingLeft="10dp"
                    android:layout_toRightOf="@+id/array_history_shop_address"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="10dip" />
            </RelativeLayout>

        </RelativeLayout>


</RelativeLayout>

